<marquee BEHAVIOR=ALTERNATE><h1>Episode Number <%= @episode.number %></h1></marquee>

<%= link_to "Back to All Episodes", episodes_path %>

<h2>
    Date: <%= @episode.date %>
</h2>

<h2> 
    Guests:
</h2>

<ul>
    <% @episode.appearances.each do |app| %>
        <li>
            <%= link_to app.guest.name, guest_path(app.guest_id) %> - Rating: <%= app.rating %>
        </li>
    <% end %>
</ul>
