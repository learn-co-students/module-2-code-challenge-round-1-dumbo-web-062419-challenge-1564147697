<marquee BEHAVIOR=ALTERNATE><h1>New Episode</h1></marquee>

<%= link_to "Back to All Episodes", episodes_path %>

<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |err| %>
            <li>
                <%= err %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @episode do |f| %>
    <%= f.label :number %><br>
    <%= f.number_field :number %><br>
    <%= f.label :date %><br>
    <%= f.number_field :date %><br>
    <%= f.submit %><br>
<% end %>