<h1>New Appearance Form</h1>

<div>
  Links:
  <br>
  <%= link_to "Guest Index", guests_path %>
  <br>
  <%= link_to "Episode Index", episodes_path %>
</div>

<% if flash[:errors] %>
  <% flash[:errors].each do |er| %>
  <li>
    <%= er %>
  </li>
  <% end %>
<% end %>

<%= form_for @appearance do |f| %>

  <%= f.label :guest_id %>
  <%= f.collection_select :guest_id, Guest.all, :id, :name %>

  <%= f.label :episode_id %>
  <%= f.collection_select :episode_id, Episode.all, :id, :date %>

  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1..5 %>


  <%= f.submit %>
<% end %>
