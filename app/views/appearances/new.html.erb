
<%if flash[:errors] %>
<%= flash[:errors] %>
<% end %>



<%= form_for @appearance do |f| %>

<%= f.label :episode_id %>
<%= f.collection_select(:episode_id,@episodes,:id, :number) %>

<%= f.label :guest_id %>
<%= f.collection_select(:guest_id,@guests,:id, :name) %>

<%= f.label :rating %>
<%= f.number_field :rating,min: 1, max:5 %>

<%= f.submit "Add Appearance" %>
<% end %>
