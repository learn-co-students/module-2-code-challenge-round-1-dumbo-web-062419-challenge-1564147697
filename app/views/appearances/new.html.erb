<h1> Log an appearance here! </h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error_message| %>
    <%= error_message %>
    <% end %>
<% end %>


<%= form_for @appearance do |f| %>

<%= f.label :episode_id %>
<%= f.collection_select :episode_id, @episodes, :id, :number %>

<%= f.label :guest_id %>
<%= f.collection_select :guest_id, @guests, :id, :name %>
Rating(out of 5)
<% f.label :rating %>
<%=f.number_field :rating %>

<%= f.submit %>

<% end %>